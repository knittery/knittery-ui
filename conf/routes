# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

GET     /simulator                  controllers.SerialSimulator.show
POST    /simulator/send             controllers.SerialSimulator.send
GET     /simulator/subscribe        controllers.SerialSimulator.subscribe

GET     /display                    controllers.Display.show
GET     /display/subscribe          controllers.Display.subscribe
GET     /display/positions          controllers.Display.positions

GET     /guide                      controllers.Guide.start
GET     /guide/:id                  controllers.Guide.execute(id: java.util.UUID)
POST    /guide/:id/next             controllers.Guide.next(id: java.util.UUID)
POST    /guide/:id/previous         controllers.Guide.previous(id: java.util.UUID)

GET     /pattern                    controllers.Pattern.show
POST    /pattern/upload				controllers.Pattern.upload

# Assets
GET     /assets/javascripts/routes.js               controllers.Application.javascriptRoutes()
GET     /assets/*file               controllers.Assets.at(path="/public", file)
GET     /libraries/*file              controllers.WebJarAssets.at(file)
