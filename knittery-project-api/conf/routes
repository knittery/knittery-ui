# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                        controllers.Application.index

POST        /v1/projects             controllers.ProjectController.create()
GET         /v1/projects/:id         controllers.ProjectController.get(id: java.util.UUID)
GET         /v1/*file                controllers.Assets.versioned(path = "/public/v1", file: Asset)

GET         /swagger-ui              controllers.Application.swaggerUI
GET         /swagger-ui/             controllers.Application.swaggerUI
GET         /swagger-ui/*file        controllers.Assets.versioned(path="/public/lib/swagger-ui", file: Asset)

