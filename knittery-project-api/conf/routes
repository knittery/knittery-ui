# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                                   controllers.Application.index

GET         /api                                controllers.Application.api

POST        /api/v1/projects                    controllers.ProjectController.create()
GET         /api/v1/projects/:id                controllers.ProjectController.get(id: java.util.UUID)
PUT         /api/v1/projects/:id                controllers.ProjectController.update(id: java.util.UUID)

GET         /api/v1/projects/:id/knitted        controllers.ProjectController.knitted(id: java.util.UUID)

GET         /api/*file                          controllers.Assets.versioned(path = "/public/api", file: Asset)

GET         /swagger-ui                         controllers.Application.swaggerUI
GET         /swagger-ui/                        controllers.Application.swaggerUI
GET         /swagger-ui/*file                   controllers.Assets.versioned(path="/public/lib/swagger-ui", file: Asset)

