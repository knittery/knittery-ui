{
  "swagger": "2.0",
  "info": {
    "version": "0.1.1",
    "title": "knittery.ch Project APIs",
    "description": "Create, modify and preview knittery projects.",
    "contact": {
      "name": "Knittery on Github",
      "url": "https://github.com/knittery",
      "email": "ms@inventsoft.ch"
    },
    "license": {
      "name": "GNU General Public License, version 2",
      "url": "https://www.gnu.org/licenses/old-licenses/gpl-2.0.en.html"
    }
  },
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "tags": [
    {
      "name": "Project",
      "description": "Manage the knittery projects"
    }
  ],
  "paths": {
    "/projects": {
      "post": {
        "description": "Create a new project.",
        "tags": [
          "Project"
        ],
        "responses": {
          "201": {
            "description": "Created new project",
            "headers": {
              "location": {
                "description": "Path to the created project.",
                "type": "string",
                "format": "URI"
              }
            }
          }
        }
      }
    },
    "/projects/{id}": {
      "get": {
        "description": "Get a project by its ID.",
        "tags": [
          "Project"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of the project.",
            "type": "string",
            "format": "UUID",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation.",
            "schema": {
              "$ref": "#/definitions/Project"
            }
          },
          "400": {
            "description": "Syntactically invalid ID."
          },
          "404": {
            "description": "Project does not exist."
          }
        }
      },
      "put": {
        "description": "Update the project.",
        "tags": [
          "Project"
        ],
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of the project.",
            "type": "string",
            "format": "UUID",
            "required": true
          },
          {
            "in": "body",
            "name": "body",
            "description": "Project object that contains the updated data.",
            "required": true,
            "schema": {
              "$ref": "#/definitions/ProjectUpdate"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Project updated"
          },
          "400": {
            "description": "Invalid data (either the ID or the content)."
          },
          "404": {
            "description": "Project does not exist, create first with a POST to /project."
          }
        }
      }
    },
    "/projects/{id}/knitted": {
      "get": {
        "description": "The garnment that will be knitted as the result of the project.",
        "tags": [
          "Project"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of the project.",
            "type": "string",
            "format": "UUID",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation.",
            "schema": {
              "$ref": "#/definitions/KnittedOutput"
            }
          },
          "400": {
            "description": "Syntactically invalid ID."
          },
          "404": {
            "description": "Project does not exist."
          }
        }
      }
    }
  },
  "definitions": {
    "Project": {
      "title": "Knittery Project",
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "UUID"
        },
        "name": {
          "type": "string",
          "example": "My Project"
        }
      },
      "required": [
        "id"
      ]
    },
    "ProjectUpdate": {
      "title": "Update of a knittery project",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "User definied name of the project.",
          "example": "My Project"
        }
      }
    },
    "KnittedOutput": {
      "title": "Description of a knitted output as Stitches.",
      "type": "object",
      "properties": {
        "mainBed": {
          "description": "Rows knitted by the main bed, first row knitted is first in the array.",
          "type": "array",
          "items": {
            "description": "Stitches of the knitted row.",
            "type": "array",
            "items": {
              "$ref": "#/definitions/Stitch"
            }
          }
        }
      }
    },
    "Stitch": {
      "title": "A stitch in a garnment.",
      "type": "object",
      "properties": {
        "type": {
          "description": "Type of the stitch. 'No' means the previous line of the garnment is joined with the next line (double height stitch).",
          "enum": [
            "no",
            "empty",
            "plain",
            "purl",
            "castOn",
            "castOff"
          ]
        },
        "yarns": {
          "description": "Yarn(s) used for this stitch.",
          "type": "array",
          "items": {
            "type": "string",
            "description": "Yarn label."
          }
        },
        "marks": {
          "description": "Special attributes of this stitch. I.e. folding line between the front and the back side of the garnment.",
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  },
  "basePath": "/v1"
}